<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["Role"] != null && Session["Role"].Equals("Admin"))
                {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("List of Posts", "Index", "Post")</li>
                        <li>@Html.ActionLink("Users", "Index", "User")</li>
                        <li>@Html.ActionLink("My Posts", "GetMyPosts", "Post")</li>
                        <li>@Html.ActionLink("Not Approved", "NotApproved", "Post")</li>
                        <li>@Html.ActionLink("Waiting For Approval", "WaitingApproval", "Post")</li>
                        <li>@Html.ActionLink("Log In", "Login", "User")</li>
                    </ul>
                </div>
            }else if (Session["Id"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("List of Posts", "Index", "Post")</li>
                        <li>@Html.ActionLink("My Posts", "GetMyPosts", "Post")</li>
                        <li>@Html.ActionLink("Not Approved", "NotApproved", "Post")</li>
                        <li>@Html.ActionLink("Waiting For Approval", "WaitingApproval", "Post")</li>
                        <li>@Html.ActionLink("Log In", "Login", "User")</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Log In", "Login", "User")</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
        @if (TempData["MessageAlert"] != null)
        {
            <div class="alert alert-danger">
                @TempData["MessageAlert"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;360Blog - Power by Bisay</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
